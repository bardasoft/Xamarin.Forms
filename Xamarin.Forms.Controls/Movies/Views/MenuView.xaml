<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Movies.Views.MenuView"   
             xmlns:behaviors="clr-namespace:Movies.Behaviors;assembly=Xamarin.Forms.Controls"
             xmlns:templates="clr-namespace:Movies.Views.Templates;assembly=Xamarin.Forms.Controls"
             BackgroundColor="{StaticResource MenuBackgroundColor}"
             Icon="movies-menu.png"
             Title=" ">
    <ContentPage.Content>
        <Grid 
            RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <ListView    
                Grid.Row="0"
                BackgroundColor="{StaticResource MenuBackgroundColor}"
                CachingStrategy="RecycleElement"
                SeparatorVisibility="None"
                ItemsSource="{Binding MenuItems}"  
                behaviors:ItemTappedCommandListView.ItemTappedCommand="{Binding ItemSelectedCommand}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <templates:MenuItemTemplate />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </ContentPage.Content>
</ContentPage>