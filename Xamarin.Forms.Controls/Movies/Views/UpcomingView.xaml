<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Movies.Views.UpcomingView"   
             xmlns:behaviors="clr-namespace:Movies.Behaviors;assembly=Xamarin.Forms.Controls"
             xmlns:templates="clr-namespace:Movies.Views.Templates;assembly=Xamarin.Forms.Controls"
             BackgroundColor="{StaticResource ToolbarColor}"
             Title="Upcoming">
    <ContentPage.Content>
        <ListView
			ItemsSource="{Binding Upcoming}" 
			SeparatorVisibility="None"
			BackgroundColor="{StaticResource BackgroundColor}"
			HasUnevenRows="true"                
            behaviors:ItemTappedCommandListView.ItemTappedCommand="{Binding MovieDetailCommand}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <templates:TimelineItemTemplate />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>